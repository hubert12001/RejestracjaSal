@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Strona główna";
}

<div class="main-container">
    <div class="search-bar">
        <form asp-controller="Home"
              asp-action="FindRoom">
            <input id="find" name="find" type="text" placeholder="Wyszukaj pokój..." onchange="">

        </form>
    </div>
    <div class="content">
        <div class="filters">
            <h3>Filtry</h3>
            <label>Cena (od - do):</label>
            <div class="price-filter">
                <input type="number" placeholder="Min" min="0">
                <input type="number" placeholder="Max" min="0">
            </div>

            <label>Lokalizacja:</label>
            <select>
                <option value="">Wszystkie</option>
                <option value="gimnazjum">Gimnazjum</option>
                <option value="inna">Inna</option>
                <option value="inna2">Inna2</option>
            </select>

            <label>Ilość miejsc:</label>
            <input class="ilosc-miejsc" type="number" min="1" placeholder="Podaj ilość">

            <label>Typ pokoju:</label>
            <select>
                <option value="">Wszystkie</option>
                <option value="typ1">Typ 1</option>
                <option value="typ2">Typ 2</option>
            </select>

            <button class="filter-button">Zastosuj</button>
        </div>
        <div class="rooms">
            @if (ViewBag.Rooms != null)
            {
                foreach (var room in ViewBag.Rooms)
                {
                    <div class="room">
                        <a asp-action="Pokoj" asp-route-id="@room.id">
                            <img class="room-image" src="~/Static/@room.image" />
                            <h1>@room.name</h1>
                            <p class="room-price">Cena: @room.price zł/h</p>
                            <p class="room-location">@room.location</p>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
    <div class="page">
        @if (ViewBag.CurrentPage > 1)
        {
            <a class="page-link"
               asp-controller="Home"
               asp-action="StaticSites"
               asp-route-name="StronaGlowna"
               asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">
                Poprzednia
            </a>
        }

        <span class="current-page">
            Strona @ViewBag.CurrentPage z @ViewBag.TotalPages
        </span>

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a class="page-link"
               asp-controller="Home"
               asp-action="StaticSites"
               asp-route-name="StronaGlowna"
               asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">
                Następna
            </a>
        }
    </div>
</div>

